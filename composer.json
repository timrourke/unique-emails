{
    "autoload": {
        "psr-4": {
            "UniqueEmails\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UniqueEmails\\UnitTests\\": "tests/"
        }
    },
    "require": {
        "nikic/fast-route": "^1.3",
        "zendframework/zend-diactoros": "^2.1",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "vimeo/psalm": "^3.6",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "lint-fix": "vendor/bin/phpcbf",
        "psalm": "psalm",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-text --coverage-html ./test-results/phpunit/html --log-junit ./test-results/phpunit/junit.xml"
    }
}
